<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <!--Material Color Definitions-->
    <material name="white">
    <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>

    <!--Base Link and Chassis Joints-->
    <link name="base_link">
    </link>

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.15 0 0"/>
    </joint>
    
    <!--Chassis Joint-->
    <link name="chassis">
        <visual>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <!-- <box size="0.3 0.3 0.15"/> -->
                <mesh filename="file://$(find cohort)/meshes/base_link.STL"/>
            </geometry>
            <material name="red"/>
        </visual>

        <!--Chassis Collision-->
        <collision>
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
            <geometry>
                <box size="0.3 0.3 0.15"/>
            </geometry>
        </collision>

        <!--Chassis Inertial-->
        <xacro:inertial_box mass="0.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!--Chassis Gazebo-->
    <gazebo reference="chassis">
        <material>Gazebo/Red</material>
    </gazebo>

    
    <!--Front Left Wheel Joint-->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.075 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!--Front Left Wheel Link-->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.04" />
            </geometry>
            <material name="yellow"/>
        </visual>
    
        <!--Front Left Wheel Collision-->
        <collision>
            <geometry>
                <sphere radius="0.04" />
            </geometry>
        </collision>

        <!--Front Left Wheel Inertial-->
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--Front Left Wheel Gazebo-->
    <gazebo reference="front_left_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>

    
    <!--Back Left Wheel Joint-->
    <joint name="back_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_left_wheel"/>
        <origin xyz="-0.075 0.175 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <!--Back Left Wheel Link-->
    <link name="back_left_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.04" />
            </geometry>
            <material name="yellow"/>
        </visual>

        <!--Back Left Wheel Collision-->
        <collision>
            <geometry>
                <sphere radius="0.04" />
            </geometry>
        </collision>

        <!--Back Left Wheel Inertial-->
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--Back Left Wheel Gazebo-->
    <gazebo reference="back_left_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>

    <!--Front Right Wheel Joint-->
    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.075 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    
    <!--Front Right Wheel Link-->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.04" />
            </geometry>
            <material name="yellow"/>
        </visual>

        <!--Front Right Wheel Collision-->
        <collision>
            <geometry>
                <sphere radius="0.04" />
            </geometry>
        </collision>

        <!--Front Right Wheel Inertial-->
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!--Front Right Wheel Gazebo-->
    <gazebo reference="front_right_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>


    <!--Back Right Wheel Joint-->
    <joint name="back_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="back_right_wheel"/>
        <origin xyz="-0.075 -0.175 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>
    

    <!--Back Right Wheel Link-->
    <link name="back_right_wheel">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.04" />
            </geometry>
            <material name="yellow"/>
        </visual>

        <!--Back Right Wheel Collision-->
        <collision>
            <geometry>
                <sphere radius="0.04" />
            </geometry>
        </collision>

        <!--Back Right Wheel Inertial-->
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.04">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    

    <!--Back right Wheel Gazebo-->
    <gazebo reference="back_right_wheel">
        <material>Gazebo/Yellow</material>
    </gazebo>



</robot>